<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :ticket_description %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :ticket_quantity %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.text_field :value, id: :ticket_value %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :ticket_email %>
  </div>

  <div class="field">
    <%= form.label :profiles %>
    <%= form.text_field :profiles, id: :ticket_profiles %>
  </div>

  <div class="field">
    <%= form.label :event_id %>
    <%= form.collection_select :event_id, @events, :id, :name, id: :ticket_event_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
